<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>

</head>
<body>
    <%- include('./partials/header.ejs') %>
    <%- include('./partials/spacer.ejs') %>

    <form class="form form__plays" action="/plays/uploads/<%= play.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <h1 class="form__heading">Edit Play Details</h1>
        <fieldset class="form__set form__set--split form-group">
            <label class="form__label" for="title">
                Title<input type="text" id="title" class="form-control" placeholder="required" name="title" value="<%= play.title %>"/>
            </label>
               
            <label class="form__label" for="genre">
                Genre<input type="text" id="genre" class="form-control" placeholder="Genre" name="genre" value="<%= play.genre %>"/>
            </label>
        </fieldset>

        <fieldset class="form__set form__set--length form-check form-check-inline form-group">
            <label class="form__label form-check-label" for="fullLength">
                Full-Length<input class="form-check-input" type="radio" id="fullLength" name="length" value="fullLength">
            </label>
                
            <label class="form__label form-check-label" for="oneAct">
                One-Act<input class="form-check-input" type="radio" id="oneAct" name="length" value="oneAct">
            </label>
                
            <label class="form__label form-check-label" for="short">
                Short<input class="form-check-input" type="radio" id="short" name="length" value="short">
            </label>
        </fieldset>

        <fieldset class="form__set form__set--cast form-group">
            <label class="form__label--short" for="castSize">
                Cast Size<input type="text" id="castSize" class="form-control" placeholder="number (range)" name="castSize" value="<%= play.castSize %>"/>
            </label>
                
            <label class="form__label--short"  for="castingMale">
                # Male Characters<input type="text" id="castingMale" class="form-control" placeholder="number" name="castingMale" value="<%= play.castingMale %>"/>
            </label>
                
            <label class="form__label--short" for="castingFemale">
                # Female Characters<input type="text" id="castingFemale" class="form-control" placeholder="number" name="castingFemale" value="<%= play.castingFemale %>"/>
            </label>
               
            <label class="form__label--short" for="castingNeutral">
                # Neutral Characters<input type="text" id="castingNeutral" class="form-control" placeholder="number" name="castingNeutral" value="<%= play.castingNeutral %>"/>
            </label>
        </fieldset>

        <fieldset class="form__set form-group">
            <label class="form__label" for="specialCasting">
                Special Casting Considerations<input type="text" class="form-control" id="specialCasting" name="specialCasting" value="<%= play.specialCasting %>"/>
            </label>
        </fieldset>  

        <fieldset class="form__set form-group">
            <label class="form__label" for="synopsis">
                Synopsis<textarea class="form-control" id="synopsis" name="synopsis" rows="5" ><%= play.synopsis %></textarea>
            </label>
        </fieldset>

        <fieldset class="form__set form-group">
            <label class="form__label" for="dialogue">
                Dialogue Sample<input type="text" class="form-control" id="dialogue" name="dialogue" value="<%= play.dialogue %>"/>
            </label>
        </fieldset>

        <fieldset class="form__set form-group" >
            <label class="form__label" for="development">
                Development History
                <div id="development-info">
                <% for (let i=0; i<play.development.length; i++) { %>
                    <div class="input-group field-box">
                        <input type="text" class="form-control" id="development" name="development" value="<%= play.development[i] %>"/>
                        <div class="input-group-append">
                            <span class="form__button--remove input-group-text remove-span" >
                                <button class="close remove-button" onClick="removeField(event,'development')">
                                    <span aria-hidden="true">
                                        &times;
                                    </span>
                                </button>
                            </span>
                        </div>
                    </div>
                    <% } %>
                </div>
                <button class="form__btn dev-button btn" onClick="addField('development')">
                    Add Another
                </button>
            </label>
        </fieldset>
            <!-- HONORS -->
            <div class="form-group">
                <div id="honors-info">
                    <label for="honors">Honors/Awards</label>
                    <% for (let i=0; i<play.honors.length; i++) { %>
                        <div class="dev-honors-field input-group field-box honors-array">
                            <input type="text" class="form-control" id="honors" name="honors" value="<%= play.honors[i] %>">
                            <div class="input-group-append">
                                <span class="input-group-text remove-span" id="basic-addon2">
                                    <button class="close remove-button" onClick="removeField(event, 'honors')">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </span>
                            </div>
                        </div>
                    <% } %>
                </div>
                <button class="honors-button btn-lite" onClick="addField('honors')">Add Another</button>
            </div>
        
            <div class="custom-file">
                <input type="file" accept="image/*" class="custom-file-input" id="prodStill" name="prodStill"/>
                <label class="custom-file-label" for="prodStill"><%= play.prodStill %></label>  
            </div>
            
            <input type="submit" class="btn-lite btn-lg mt-3" id="submit-btn" value="SUBMIT">
        </form>
        <!-- </div> -->
    <%- include('./partials/footer.ejs') %>
</body>
</html>