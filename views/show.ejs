<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>

    <%- include('./partials/header.ejs') %>
    <%- include('./partials/spacer.ejs') %>

    <h2> <%= play.title %></h2>
    <p> <%= play.genre %></p>
    <% if(play.length === "fullLength") { %>
        <p>Full-Length</p>
    <% } else if (play.length === "oneAct") { %>
        <p> One-Act</p>
    <%} else if (play.length === "short") { %>
        <p>Short</p>
    <% } %>

    <h6>SYNOPSIS</h6>
    <p> <%= play.synopsis %></p>

    <h6>CASTING REQUIREMENTS</h6>
    <p>Total Cast Size: <%= play.castSize %></p>
    <% if (play.castingMale) { %>
        <p> Male-Identifying: <%= play.castingMale %></p>
    <% } %>
    <% if (play.castingFemale) { %>
        <p> Female-Identifying: <%= play.castingFemale %></p>
    <% } %>
    <% if (play.castingNeutral) { %>
        <p> Gender-Neutral: <%= play.castingNeutral %></p>    
    <% } %>
    <% if (play.specialCasting) { %>
        <p> Special Casting Needs: <%= play.specialCasting %></p>
    <% } %>
    
    <!-- DEVELOPMENT -->
    <% if (play.development == '') { %>
        <!-- meaningless variable. Using if (!play.development == '') isn't working -->
        <% let i = 0 %>
    <% } else { %>
        <h6>Development History</h6>
        <% for (let i=0; i<play.development.length; i++) { %>
            <p><%= play.development[i] %></p>
        <% } %>
    <% } %>

    <!-- HONORS -->
    <% if (play.honors == '') { %>
        <% let i = 0 %>
    <% } else { %>
        <h6>Honors</h6>
        <% for (let i=0; i<play.honors.length; i++) { %>
            <p><%= play.honors[i] %></p>
        <% } %> 
    <% } %>

    <p> <%= play.dialogue %></p>
    <p> <%= play.story %></p>
    <img class="img-fluid" src='<%= play.prodStill %>'>

    <%- include('./partials/footer.ejs') %>

</body>
</html>