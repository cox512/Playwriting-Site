<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>

</head>
<body>
    <%- include('./partials/header.ejs') %>
    <%- include('./partials/spacer.ejs') %>
    <div class="container pb-5 new-play-form form-label">
        <!-- Added 'uploads' to the action -->
 <!-- IMAGE -- CHECK OUT BS-CUSTOM-FILE-INPUT-NPM TO MAKE FILE BROWSER DYNAMIC-->

    <form action="/plays/uploads" id="details-page" onSubmit="console.log('Look!')" method="POST" enctype="multipart/form-data">
        <h1>Add New Play Details</h1>
        <!-- TITLE -->
        <div class="row">
            <div class="col-8">
                <label for="title">Title</label>
                <input type="text" id="title" class="form-control" placeholder="required" name="title"/>
            </div>
            <!-- GENRE -->
            <div class="col-4">
                <label for="genre">Genre</label>
                <input type="text" id="genre" class="form-control" placeholder="Genre" name="genre"/>
            </div>
        </div>
        <!-- LENGTH -->
        <div class="row justify-content-center pt-3 pb-3">
            <div class="form-check form-check-inline col-3">
                <input class="form-check-input" type="radio" id="fullLength" name="length" value="fullLength">
                <label class="form-check-label" for="fullLength">Full-Length</label>
            </div>
            <div class="form-check form-check-inline col-3">
                <input class="form-check-input" type="radio" id="oneAct" name="length" value="oneAct">
                <label class="form-check-label" for="oneAct">One-Act</label>
            </div>
            <div class="form-check form-check-inline col-3">
                <input class="form-check-input" type="radio" id="short" name="length" value="short">
                <label class="form-check-label" for="short">Short</label>
            </div>
        </div>
        <!-- CASTING -->
        <div class="row">
            <div class="col-3">
                <label for="castSize">Cast Size</label>
                <input type="text" id="castSize" class="form-control" placeholder="number (range)" name="castSize"/>
            </div>
            <div class="col-3">
                <label for="castingMale"># Male Chars.</label>
                <input type="text" id="castingMale" class="form-control" placeholder="number" name="castingMale"/>
            </div>
            <div class="col-3">
                <label for="castingFemale"># Female Chars.</label>
                <input type="text" id="castingFemale" class="form-control" placeholder="number" name="castingFemale"/>
            </div>
            <div class="col-3">
                <label for="castingNeutral"># G.N. Chars.</label>
                <input type="text" id="castingNeutral" class="form-control" placeholder="number" name="castingNeutral"/>
            </div>
        </div>
        <div class="row mt-3">
            <label for="specialCasting">Special Casting Considerations</label>
            <input type="text" class="form-control" id="specialCasting" name="specialCasting"/>
        </div>       
        <!-- SYNOPSIS -->
        <div class="form-group mt-3">
            <label for="synopsis">Synopsis</label>
            <textarea class="form-control" id="synopsis" name="synopsis" rows="5"></textarea>
        </div>
        <!-- DIALOGUE -->
        <div class="form-group">
            <label for="dialogue">Dialogue Sample</label>
            <input type="text" class="form-control" id="dialogue" name="dialogue"/>
        </div>
        <!-- DEVELOPMENT HISTORY -->
        <div class="form-group">
            <div id="dev-info">
                <label for="development">Development History</label>
                <input type="text" class="form-control dev-array" id="development" name="development"/>
            </div>
            <button type="button" class="dev-button btn-lite">Add Another</button>
        </div>
        <!-- HONORS -->
        <div class="form-group">
            <div id="honors-info">
                <label for="honors">Honors/Awards</label>
                <input type="text" class="form-control honors-array" id="honors" name="honors"/>
            </div>
            <button type="button" class="honors-button btn-lite" >Add Another</button>
        </div>
        <!-- BACKSTORY -->
        <div class="form-group">
            <label for="story">Inspiration/Backstory</label>
            <textarea class="form-control" id="story" name="story" rows="5"></textarea>
        </div>

    <!-- SEPERATE IMAGE UPLOAD FORM -->
    <!-- <form action="/plays/uploads" onSubmit="console.log('Upload!')" method="POST" enctype="multipart/form-data"> -->
        <div class="custom-file">
            <input type="file" accept="image/*" class="custom-file-input"  id="prodStill" name="prodStill">
            <label class="custom-file-label" for="prodStill">Image Upload</label>
            <!-- <input type="submit" class="btn-lite btn-lg mt-3" id="submit-btn2" value="SUBMIT"> -->
        </div>
       
        
        <!--SUBMIT BUTTON FOR TEXT FORM-->
        <input type="submit" form="details-page" class="btn-lite btn-lg mt-3" id="submit-btn" value="SUBMIT">
    </form>

    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>