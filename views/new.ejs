<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>

</head>
<body>
    <%- include('./partials/header.ejs') %>

    <h1 id="top">Add New Play Details</h1>
    <form action="/plays" method="POST" enctype="multipart/form-data">
        <!-- TITLE -->
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="required"><br/>
        <!-- GENRE -->
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre"><br/>
        <!-- LENGTH -->
        <p>Length:</p>
        <label for="fullLength">Full-Length:</label>
        <input type="radio" id="fullLength" name="length" value="fullLength"><br/>
        <label for="one-act">One-Act:</label>
        <input type="radio" id="oneAct" name="length" value="oneAct"><br/>
        <label for="short">Short:</label>
        <input type="radio" id="short" name="length" value="short"><br/>
        <!-- SYNOPSIS -->
        <label for="synopsis">Synopsis:</label>
        <input type="text" id="synopsis" name="synopsis"><br/>
        <!-- DIALOGUE -->
        <label for="dialogue">Dialogue Sample:</label>
        <input type="text" id="dialogue" name="dialogue"><br/>
        <!-- CASTING -->
        <p>Casting Needs:</p>
        <label for="castSize">Total Cast Size:</label>
        <input type="text" id="castSize" name="castSize" placeholder="number"><br/>
        <label for="castingMale">Male-Identified:</label>
        <input type="text" id="castingMale" name="castingMale" placeholder="number"><br/>
        <label for="castingFemale">Female-Identified:</label>
        <input type="text" id="castingFemale" name="castingFemale" placeholder="number"><br/>
        <label for="castingNeutral">Gender Neutral:</label>
        <input type="text" id="castingNeutral" name="castingNeutral" placeholder="number"><br/>
        <label for="castingSpecial">Casting Special Considerations:</label>
        <input type="text" id="castingSpecial" name="castingSpecial"><br/>


        <!-- DEVELOPMENT HISTORY -->
        <p>Play History:</p>
        <label for="development">Development History:</label>

        <div id="dev-info">
            <input type="text" id="development" name="development" class='dev-array'><br/>
        </div>
        <button type="button" class="dev-button" id="development">Add Another</button><br/>


        <!-- HONORS -->
        <label for="honors">Honors:</label></br>
        
        <div id="honors-info">
        <input type="text" name="honors" class="honors-array"><br/>
        </div>
        <button type="button" class="honors-button">Add Another</button><br/>

        <!-- BACKSTORY -->
        <label for="story">Inspiration/Interesting Story</label>
        <textarea id="story" name="story" rows="4" columns="30"></textarea><br/>

        <!-- IMAGE -->
        <label for="img">Image Upload:</label>
        <input type="file" id="img" name="img"><br/>
        <!--SUBMIT BUTTON -->
        <input type="submit" id="submit-btn" value="SUBMIT">
    </form>

    <%- include('./partials/footer.ejs') %>

</body>
</html>