<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body id="index-page">
    <%- include('./partials/header.ejs') %>
    <%- include('./partials/spacer.ejs') %>
    <div class="container index-intro">
                <h2 class="index-heading">THE PLAYS</h2>
                <img  class="overpass" alt="Actors rehearse a play" src="images/AVBM_overpass.jpg" />
    </div>

    <div class="container-sm">
        <h3 class="length">LONG ONES</h3>
        <div class="row length-divs long-plays">
                <% for(let i=0; i<plays.length; i++) { %>
                    <% if (plays[i].length === "fullLength") { %>
                        <div class="col-4">
                        <a class="play" href='/plays/<%= plays[i].id %>'><img class="thumbnail" src='<%= plays[i].prodStill %>'/> </a>
                        <p class="title"><%= plays[i].title %></p>
                        <% if(currentUser) { %>
                        <div class="d-flex d-flex justify-content-around">
                        <form action="/plays/<%= plays[i].id %>?_method=DELETE" method="POST">
                            <input class="btn btn-danger" type="submit" value="DELETE">
                        </form>
                        <a class="btn btn-secondary" href="/plays/<%= plays[i].id %>/edit">Edit</a>
                        </div>
                        <% } %>
                        </div>
                    <% } %>
                <% } %>
        </div>

        <h3 class="length">SHORT ONES</h3>
        <div class="row length-divs short-plays">
                <% for(let i=0; i<plays.length; i++) { %>
                    <% if (plays[i].length === "oneAct" || plays[i].length === "short") { %>
                        <div class="col-4">
                        <a class="play" href='/plays/<%= plays[i].id %>'><img class="thumbnail" src='<%= plays[i].prodStill %>'/></a>
                        <p class="title"><%= plays[i].title %></p>
                        <% if(currentUser) { %>
                        <div class="d-flex justify-content-around">
                        <form action="/plays/<%= plays[i].id %>?_method=DELETE" method="POST">
                            <input class="btn btn-danger" type="submit" value="DELETE">
                        </form>
                        <a class="btn btn-secondary" href="/plays/<%= plays[i].id %>/edit" role="button">Edit</a>
                        </div>
                        <% } %>
                        </div>
                    <% } %>
                <% } %>
        </div>
        
    </div>

    <div class="spacer"></div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>