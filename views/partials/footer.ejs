<footer>
    <p class="copyright">copyright 2020</p>
    <ul class="list-group list-group-horizontal">
    <!-- If the user has successfully logged in -->
        <% if (currentUser) { %>
            <li class="footer-link welcome">Welcome <%= currentUser.username %></li>
            <li class="footer-link">
                <a href="/plays/new">Add New Play</a>
            </li>
            <li class="footer-link">
                <form action="/sessions?_method=DELETE" method="POST">
                    <input class="btn log-out" type="submit" value="Log Out"/>
                </form>
            </li>
        <% } else { %>
            <li class="footer-link">
                <a href="/sessions/new">admin log-in</a>
            </li>
        <% } %>
    </ul>
</footer>

