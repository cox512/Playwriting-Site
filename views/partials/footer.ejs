<footer class="footer">
    <p class="footer__copyright">copyright 2020</p>
    <ul class="footer__nav list-group list-group-horizontal">
    <!-- If the user has successfully logged in -->
        <% if (currentUser) { %>
            <li class="footer__link footer--hide">Welcome <%= currentUser.username %></li>
            <li class="footer__link">
                <a href="/plays/new">Add New Play</a>
            </li>
            <li class="footer__link">
                <form action="/sessions?_method=DELETE" method="POST">
                    <input class="footer__link--log-out" type="submit" value="Log Out"/>
                </form>
            </li>
        <% } else { %>
            <li class="footer__link">
                <a href="/sessions/new">admin log-in</a>
            </li>
        <% } %>
    </ul>
</footer>
